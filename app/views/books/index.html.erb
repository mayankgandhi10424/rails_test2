<h1>Listing Books</h1>
 
<table>
  <thead>
    <tr>
      <th>pub g</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.published_at %></td>
        <td><%= link_to "Show", book %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
<br>
 
<%= link_to "New book", new_book_path %>

<% content_for :content do %>  
  <%= render "search_filters", search: @books[0] do |f| %>
    <p>
      Name contains: <%= f.text_field :author_id_was %>
    </p>
  <% end %>
<% end %>

<% if false %>
  <h1>New zone</h1>
  <%= render partial: "form", locals: {zone: @author} %>

  <%= render @authors %>
  <%= render @author %>
  <%= render @kuchbhi %>
  
  <%= render partial: "authors/author", object: @new_author %>
  
  <h1>Authors</h1>
  <%= render partial: "authors/author", collection: @authors %>

  <h1>Contacts</h1>
  <%= render [@author, @authors[3], @books[0]] %>

  <%= render partial: "book", collection: @books, as: :item %>

  <%= render partial: @books, spacer_template: "link_area" %>

  <%= render partial: @books, layout: "max" %>
<% end %>

